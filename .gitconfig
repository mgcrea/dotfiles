[core]
	autocrlf = input

[color]
	diff = auto

[alias]
	st = status
	di = diff
	co = checkout
	ci = commit
	br = branch
	sta = stash
	
	fetch = !git fetch --recurse-submodules
	pull = !git pull --recurse-submodules
	repull = !git reset --hard && git clean -f -d && git pull --recurse-submodules && git submodule init && git submodule update

	subreset = !git submodule foreach "git reset --hard && git clean -f -d;"
	subupdate = !git submodule init;git submodule update
	subrepull = !git submodule foreach "git reset --hard && git clean -fd;git submodule init; git submodule update"

	up = !git add . && git commit -a -m "Update." && git push
	fw = !git branch --set-upstream
	lg = !git log -5 --pretty=format:\"%Cred%h%Creset : %Cgreen%s%Creset : %ci : %cn\" | cat

	ver = !git branch 2> /null | sed -e \"/^[^*]/d\" -e \"s/* \\(.*\\)/\\1/\" > version && git log --pretty=oneline --date-order | wc -l | sed \"s/^ *//g\" | sed \"s/ *$//g\"' >> version && git log -1 --pretty=format:\"%cn%n%ci%n%h\" >> version
